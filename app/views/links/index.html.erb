<div class="container">
  <div class="jumbotron">
    <h1> Welcome to Linker </h1>
    <%= link_to "Submit a Link", new_link_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>
      <% @links.each do |link| %>
      <%= link.votes %>
      <%= link_to link.title, link.url %>
    </h3>
    </div>

    <div class="col-md-4">
      <%= link_to 'Upvote', upvote_path(link), class: "btn btn-success" %>
      <%= link_to 'Downvote', downvote_path(link), class: "btn btn-danger" %>
      <%= link_to 'Show link', link_path(link), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
